
@model CoverType 

<form method="post" class="mb-5" asp-action="Update">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Update Cover Type</h2>
            <hr/>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn-primary btn" style="width:150px">Update</button>
     <a class="btn btn-secondary" asp-area="Admin" asp-controller="CoverType" asp-action="Index">Back To List</a>

  </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}