@model Category 

<form method="post" class="mb-5">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Create Category</h2>
            <hr/>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>
     <div class="mb-3">
        <label asp-for="DisplayOrder"></label>
        <input asp-for="DisplayOrder " class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span> 
    </div>
    <button type="submit" class="btn-primary btn" style="width:150px">Create</button>
     <a class="btn btn-secondary" asp-area="Admin" asp-controller="Category" asp-action="Index">Back To List</a>

  </div>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
