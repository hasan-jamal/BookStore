
@model IEnumerable<Category>



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1 class="text-primary">Category List</h1>
        </div>
        <div class="col-6 text-end">
            <a class="btn-primary btn" asp-area="Admin" asp-controller="Category" asp-action="Create"><i class="bi bi-plus-circle me-1"></i> Create New Category</a>
        </div>
    </div>

</div>
<br />
<br />

<table class="table table-hover table-bordered text-center">

    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
             <th>
                Date Time
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
        <tr>
            <td>
                @obj.Name
            </td>
            <td>
                @obj.DisplayOrder
            </td>
              <td>
                @obj.CreateDateTime
            </td>
            <td>
                <a class="btn-info btn" asp-action="Update" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a>
                <a class="btn-danger btn" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i></a>

            </td>
        </tr>
        }
    </tbody>
</table>


    

